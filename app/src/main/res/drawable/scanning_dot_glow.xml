<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Outer glow effect -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#3300D4E6"/>
            <size android:width="12dp" android:height="12dp"/>
        </shape>
    </item>
    
    <!-- Inner bright dot -->
    <item 
        android:left="2dp" 
        android:top="2dp" 
        android:right="2dp" 
        android:bottom="2dp">
        <shape android:shape="oval">
            <solid android:color="#00D4E6"/>
            <size android:width="8dp" android:height="8dp"/>
        </shape>
    </item>
    
    <!-- Core highlight -->
    <item 
        android:left="3dp" 
        android:top="3dp" 
        android:right="3dp" 
        android:bottom="3dp">
        <shape android:shape="oval">
            <solid android:color="#80FFFFFF"/>
            <size android:width="6dp" android:height="6dp"/>
        </shape>
    </item>

</layer-list>