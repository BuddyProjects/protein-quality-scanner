<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:background="@color/surface_dark">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                style="@style/Widget.Material3.Button.IconButton"
                app:icon="@drawable/ic_back"
                app:iconTint="@color/text_primary_dark"
                app:iconSize="24dp"
                android:background="?android:attr/selectableItemBackgroundBorderless" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Favorites"
                android:textSize="20sp"
                android:textColor="@color/text_primary_dark"
                android:textStyle="bold"
                android:fontFamily="@font/blinker" />

            <!-- Cancel selection button (visible in selection mode) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancelSelection"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Cancel"
                android:textSize="14sp"
                android:visibility="gone"
                style="@style/Widget.Material3.Button.TextButton"
                android:textColor="#00D4E6" />

        </LinearLayout>

        <!-- Empty State -->
        <LinearLayout
            android:id="@+id/emptyState"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            android:padding="32dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_heart_outline"
                app:tint="#555555"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Favorites Yet"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:fontFamily="@font/blinker" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap the heart icon on results to save favorites"
                android:textSize="14sp"
                android:textColor="#888888"
                android:layout_marginTop="8dp"
                android:gravity="center" />

        </LinearLayout>

        <!-- Instruction hint -->
        <TextView
            android:id="@+id/tvHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ’¡ Long-press any product to compare with others"
            android:textSize="13sp"
            android:textColor="#888888"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:background="#1A1A2E" />

        <!-- Favorites List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerFavorites"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:padding="16dp" />

    </LinearLayout>

    <!-- Compare FAB (visible when 2 items selected) -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabCompare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:text="Compare"
        android:textColor="#000000"
        app:icon="@drawable/ic_compare"
        app:iconTint="#000000"
        app:backgroundTint="#00D4E6"
        android:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
