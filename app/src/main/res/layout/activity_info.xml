<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sophisticated_background_gradient"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header with back button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                style="@style/Widget.Material3.Button.IconButton"
                app:icon="@drawable/ic_back"
                app:iconTint="#FFFFFF"
                app:iconSize="24dp"
                android:background="?android:attr/selectableItemBackgroundBorderless" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="About Protein Quality"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/blinker"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- App Logo Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="32dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/logo_ai_generated"
                android:scaleType="centerInside"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Protein Quality Scanner"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/blinker"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scientific protein analysis at your fingertips"
                android:textSize="14sp"
                android:textColor="#777777"
                android:fontFamily="@font/blinker"
                android:gravity="center" />

        </LinearLayout>

        <!-- What is PDCAAS Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:strokeWidth="1dp"
            app:strokeColor="#333333"
            app:cardBackgroundColor="#282828">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ§¬ What is PDCAAS?"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/blinker"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PDCAAS (Protein Digestibility Corrected Amino Acid Score) is the gold standard for measuring protein quality.\n\nIt evaluates:\nâ€¢ Complete amino acid profile\nâ€¢ Digestibility by humans\nâ€¢ Biological value for muscle building\n\nScores range from 0.0 to 1.0, where 1.0 represents perfect protein quality."
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/blinker"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Quality Categories Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:strokeWidth="1dp"
            app:strokeColor="#333333"
            app:cardBackgroundColor="#282828">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š Quality Categories"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/blinker"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="4dp">

                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@color/quality_excellent"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Excellent (0.90-1.0)"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:fontFamily="@font/blinker" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Whey, Casein, Egg, Animal proteins"
                        android:textSize="12sp"
                        android:textColor="#777777"
                        android:fontFamily="@font/blinker"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="8dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="4dp">

                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@color/quality_good"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Good (0.75-0.89)"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:fontFamily="@font/blinker" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Soy isolate, Pea isolate, Quinoa"
                        android:textSize="12sp"
                        android:textColor="#777777"
                        android:fontFamily="@font/blinker"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="8dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="4dp">

                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@color/quality_medium"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Medium (0.50-0.74)"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:fontFamily="@font/blinker" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nuts, Seeds, Some legumes"
                        android:textSize="12sp"
                        android:textColor="#777777"
                        android:fontFamily="@font/blinker"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="8dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="4dp">

                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@color/quality_low"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Low (&lt;0.50)"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:fontFamily="@font/blinker" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Grains, Collagen, Incomplete proteins"
                        android:textSize="12sp"
                        android:textColor="#777777"
                        android:fontFamily="@font/blinker"
                        android:layout_marginStart="20dp" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- How to Use Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:strokeWidth="1dp"
            app:strokeColor="#333333"
            app:cardBackgroundColor="#282828">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”¬ How to Use This App"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/blinker"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. ðŸ“Š Scan Product Barcode\n   Get instant PDCAAS analysis from product database\n\n2. ðŸ“· Scan Ingredient Lists\n   Take photos to analyze ingredient text via OCR\n\n3. ðŸ” Manual Protein Lookup\n   Search our database for specific protein sources\n\n4. âš™ï¸ Customize Settings\n   Adjust themes and preferences"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/blinker"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>