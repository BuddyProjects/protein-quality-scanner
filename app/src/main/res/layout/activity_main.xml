<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sophisticated_background_gradient"
    android:fillViewport="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="18dp"
    android:paddingTop="24dp"
    android:paddingBottom="24dp">

    <!-- Top Bar - Icons Only -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end|center_vertical"
        android:layout_marginBottom="8dp">

        <!-- Pending Scans Button (shown only when there are pending scans) -->
        <FrameLayout
            android:id="@+id/btnPendingScans"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginEnd="4dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:visibility="gone">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_sync"
                app:tint="#FFB84D" />

            <!-- Badge -->
            <TextView
                android:id="@+id/pendingBadge"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="top|end"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/badge_background"
                android:gravity="center"
                android:text="3"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="gone" />

        </FrameLayout>

        <!-- Info Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnInfo"
            android:layout_width="44dp"
            android:layout_height="44dp"
            style="@style/Widget.Material3.Button.IconButton"
            app:icon="@drawable/ic_info"
            app:iconTint="?android:attr/textColorSecondary"
            app:iconSize="22dp"
            android:layout_marginEnd="4dp"
            android:background="?android:attr/selectableItemBackgroundBorderless" />

        <!-- Settings Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSettings"
            android:layout_width="44dp"
            android:layout_height="44dp"
            style="@style/Widget.Material3.Button.IconButton"
            app:icon="@drawable/ic_settings"
            app:iconTint="?android:attr/textColorSecondary"
            app:iconSize="22dp"
            android:background="?android:attr/selectableItemBackgroundBorderless" />

    </LinearLayout>

    <!-- Hero Section: Logo + App Name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logoButton"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/logo_button_selector"
            android:scaleType="centerInside"
            android:clickable="true"
            android:focusable="true"
            android:background="@android:color/transparent" />

        <!-- App Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PROTEIN QUALITY"
            android:textSize="26sp"
            android:textColor="?android:attr/textColorPrimary"
            android:textStyle="bold"
            android:fontFamily="@font/blinker"
            android:letterSpacing="0.08"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SCANNER"
            android:textSize="26sp"
            android:textColor="?android:attr/textColorPrimary"
            android:textStyle="bold"
            android:fontFamily="@font/blinker"
            android:letterSpacing="0.08"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Tagline -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Analyze protein quality with PDCAAS"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary"
            android:fontFamily="@font/blinker"
            android:gravity="center" />

    </LinearLayout>

    <!-- Main Actions Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Primary Action - Barcode Scan -->
        <LinearLayout
            android:id="@+id/btnScanBarcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/refined_card_background"
            android:paddingVertical="20dp"
            android:paddingHorizontal="20dp"
            android:layout_marginBottom="10dp"
            android:clickable="true"
            android:focusable="true">


            <!-- Content -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SCAN BARCODE"
                    android:textSize="18sp"
                    android:textColor="@color/text_sophisticated_primary"
                    android:fontFamily="@font/blinker"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quick database lookup"
                    android:textSize="14sp"
                    android:textColor="@color/text_sophisticated_tertiary"
                    android:fontFamily="@font/blinker" />

            </LinearLayout>

            <!-- Action Icon -->
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_barcode"
                app:tint="#00D4E6" />

        </LinearLayout>

        <!-- Secondary Action - Ingredient Photo -->
        <LinearLayout
            android:id="@+id/btnScanIngredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/refined_card_background"
            android:paddingVertical="20dp"
            android:paddingHorizontal="20dp"
            android:layout_marginBottom="10dp"
            android:clickable="true"
            android:focusable="true">


            <!-- Content -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SCAN INGREDIENTS"
                    android:textSize="18sp"
                    android:textColor="@color/text_sophisticated_primary"
                    android:fontFamily="@font/blinker"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Photo of ingredient list"
                    android:textSize="14sp"
                    android:textColor="@color/text_sophisticated_tertiary"
                    android:fontFamily="@font/blinker" />

            </LinearLayout>

            <!-- Action Icon -->
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_camera"
                app:tint="#00D4E6" />

        </LinearLayout>

        <!-- Tertiary Action - Manual Entry -->
        <LinearLayout
            android:id="@+id/btnManualEntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/refined_card_background"
            android:paddingVertical="18dp"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="10dp"
            android:clickable="true"
            android:focusable="true">


            <!-- Content -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MANUAL ENTRY"
                    android:textSize="18sp"
                    android:textColor="@color/text_sophisticated_primary"
                    android:fontFamily="@font/blinker"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter barcode manually"
                    android:textSize="14sp"
                    android:textColor="@color/text_sophisticated_tertiary"
                    android:fontFamily="@font/blinker" />

            </LinearLayout>

            <!-- Action Icon -->
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_edit"
                app:tint="#00D4E6" />

        </LinearLayout>

        <!-- Fourth Action - Protein Source Lookup -->
        <LinearLayout
            android:id="@+id/btnProteinLookup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/refined_card_background"
            android:paddingVertical="18dp"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="10dp"
            android:clickable="true"
            android:focusable="true">

            <!-- Content -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PROTEIN LOOKUP"
                    android:textSize="18sp"
                    android:textColor="@color/text_sophisticated_primary"
                    android:fontFamily="@font/blinker"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search protein database"
                    android:textSize="14sp"
                    android:textColor="@color/text_sophisticated_tertiary"
                    android:fontFamily="@font/blinker" />

            </LinearLayout>

            <!-- Action Icon -->
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_search"
                app:tint="#00D4E6" />

        </LinearLayout>

        <!-- Fifth Action - History -->
        <LinearLayout
            android:id="@+id/btnHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/refined_card_background"
            android:paddingVertical="18dp"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="10dp"
            android:clickable="true"
            android:focusable="true">

            <!-- Content -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HISTORY"
                    android:textSize="18sp"
                    android:textColor="@color/text_sophisticated_primary"
                    android:fontFamily="@font/blinker"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View past scans"
                    android:textSize="14sp"
                    android:textColor="@color/text_sophisticated_tertiary"
                    android:fontFamily="@font/blinker" />

            </LinearLayout>

            <!-- Action Icon -->
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_history"
                app:tint="#00D4E6" />

        </LinearLayout>

        <!-- Sixth Action - Favorites -->
        <LinearLayout
            android:id="@+id/btnFavorites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/refined_card_background"
            android:paddingVertical="18dp"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="32dp"
            android:clickable="true"
            android:focusable="true">

            <!-- Content -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FAVORITES"
                    android:textSize="18sp"
                    android:textColor="@color/text_sophisticated_primary"
                    android:fontFamily="@font/blinker"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saved products"
                    android:textSize="14sp"
                    android:textColor="@color/text_sophisticated_tertiary"
                    android:fontFamily="@font/blinker" />

            </LinearLayout>

            <!-- Action Icon -->
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_heart_filled"
                app:tint="#00D4E6" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
</ScrollView>