<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/sophisticated_background_gradient">

    <!-- Header with Back Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="24dp"
        android:paddingTop="24dp"
        android:paddingBottom="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            style="@style/Widget.Material3.Button.IconButton"
            app:icon="@drawable/ic_back"
            app:iconTint="#FFFFFF"
            app:iconSize="24dp"
            android:background="?android:attr/selectableItemBackgroundBorderless" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Analysis Results"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/blinker"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Loading State -->
            <LinearLayout
                android:id="@+id/loadingLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="64dp"
                android:visibility="visible">

                <ProgressBar
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginBottom="24dp"
                    android:indeterminateTint="#00D4E6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/loading"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/blinker"
                    android:textStyle="bold"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Computing molecular analysis..."
                    android:textSize="14sp"
                    android:textColor="#AAAAAA"
                    android:fontFamily="@font/blinker"
                    android:layout_marginTop="8dp"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Results Content -->
            <LinearLayout
                android:id="@+id/resultsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Hero Quality Score Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#1E1E1E"
                    app:strokeColor="#333333"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="32dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pdcaas_score"
                            android:textSize="16sp"
                            android:textColor="#AAAAAA"
                            android:fontFamily="@font/blinker"
                            android:letterSpacing="0.1"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/tvPdcaasScore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.85"
                            android:textSize="48sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/blinker"
                            android:textColor="@color/quality_good"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:id="@+id/tvQualityCategory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Good Quality Protein"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/blinker"
                            android:textColor="@color/quality_good"
                            android:gravity="center" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Product Information Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#252525"
                    app:strokeColor="#333333"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Product Information"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#00D4E6"
                            android:fontFamily="@font/blinker"
                            android:layout_marginBottom="16dp" />

                        <TextView
                            android:id="@+id/tvProductName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Product Name"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:fontFamily="@font/blinker"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/tvBarcode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Barcode: 1234567890"
                            android:textSize="14sp"
                            android:textColor="#888888"
                            android:fontFamily="monospace"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvProteinContent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Protein: 25g per 100g"
                            android:textSize="16sp"
                            android:textColor="#AAAAAA"
                            android:fontFamily="@font/blinker" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Protein Analysis Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#252525"
                    app:strokeColor="#333333"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/detected_proteins"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#00D4E6"
                            android:fontFamily="@font/blinker"
                            android:layout_marginBottom="16dp" />

                        <TextView
                            android:id="@+id/tvFoundProteins"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Found proteins: Whey, Casein"
                            android:textSize="16sp"
                            android:textColor="#FFFFFF"
                            android:fontFamily="@font/blinker"
                            android:lineSpacingExtra="4dp" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Native Ad Container (hidden by default, shown for non-premium users) -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/nativeAdCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#252525"
                    app:strokeColor="#333333"
                    app:strokeWidth="1dp"
                    android:visibility="gone">

                    <FrameLayout
                        android:id="@+id/nativeAdContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.card.MaterialCardView>

                <!-- Warnings Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/warningsCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#2A1A1A"
                    app:strokeColor="#FF6B6B"
                    app:strokeWidth="1dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="⚠️ Quality Warnings"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/quality_low"
                            android:fontFamily="@font/blinker"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:id="@+id/tvWarnings"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="#FF8A80"
                            android:fontFamily="@font/blinker"
                            android:lineSpacingExtra="4dp" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Debug Information Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/debugCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#1A1A1A"
                    app:strokeColor="#333333"
                    app:strokeWidth="1dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/debug_information"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#888888"
                            android:fontFamily="@font/blinker"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:id="@+id/tvDebugInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:fontFamily="monospace"
                            android:lineSpacingExtra="2dp" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Action Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnScanAgain"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="@string/scan_again"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:fontFamily="@font/blinker"
                    app:backgroundTint="#00D4E6"
                    app:cornerRadius="16dp"
                    app:elevation="0dp"
                    app:icon="@android:drawable/ic_menu_camera"
                    app:iconGravity="textStart"
                    app:iconSize="24dp"
                    app:iconTint="#000000"
                    android:layout_marginBottom="32dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
