<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:orientation="vertical">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:background="@color/surface_dark">

        <!-- Back Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            style="@style/Widget.Material3.Button.IconButton"
            app:icon="@drawable/ic_back"
            app:iconTint="@color/text_secondary_dark"
            android:background="@drawable/button_icon_dark" />

        <!-- Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="Settings"
            android:textSize="20sp"
            android:textColor="@color/text_primary_dark"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light" />

    </LinearLayout>

    <!-- Settings Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Theme Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/surface_card_dark"
                app:strokeColor="@color/border_dark"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Section Header -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Appearance"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary_dark"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Choose your preferred theme"
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary_dark"
                        android:fontFamily="sans-serif"
                        android:layout_marginBottom="20dp" />

                    <!-- Theme Options -->
                    <RadioGroup
                        android:id="@+id/radioGroupTheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/radioDark"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="Dark Theme"
                            android:textColor="@color/text_primary_dark"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif"
                            android:buttonTint="@color/primary_accent"
                            android:paddingStart="8dp"
                            android:layout_marginBottom="8dp" />

                        <RadioButton
                            android:id="@+id/radioLight"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="Light Theme"
                            android:textColor="@color/text_primary_dark"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif"
                            android:buttonTint="@color/primary_accent"
                            android:paddingStart="8dp"
                            android:layout_marginBottom="8dp" />

                        <RadioButton
                            android:id="@+id/radioSystem"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="Follow System"
                            android:textColor="@color/text_primary_dark"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif"
                            android:buttonTint="@color/primary_accent"
                            android:paddingStart="8dp" />

                    </RadioGroup>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- About Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/surface_card_dark"
                app:strokeColor="@color/border_dark"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Section Header -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="About"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary_dark"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Protein Quality Scanner"
                        android:textSize="15sp"
                        android:textColor="@color/text_primary_dark"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Version 1.0.0"
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary_dark"
                        android:fontFamily="sans-serif"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Analyze protein quality using PDCAAS scoring with advanced compound detection and gelatin inflation warnings."
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary_dark"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="2dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>