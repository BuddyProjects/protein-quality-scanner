<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:orientation="vertical">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:background="@color/surface_dark">

        <!-- Back Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            style="@style/Widget.Material3.Button.IconButton"
            app:icon="@drawable/ic_back"
            app:iconTint="@color/text_primary_dark"
            app:iconSize="24dp"
            android:background="?android:attr/selectableItemBackgroundBorderless" />

        <!-- Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Settings"
            android:textSize="20sp"
            android:textColor="@color/text_primary_dark"
            android:textStyle="bold"
            android:fontFamily="@font/blinker" />

    </LinearLayout>

    <!-- Settings Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Premium Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/surface_card_dark"
                app:strokeColor="@color/border_dark"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Section Header -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Premium"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary_dark"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="16dp" />

                    <!-- Premium Active Layout (shown when premium) -->
                    <LinearLayout
                        android:id="@+id/premiumActiveLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_check_circle"
                            app:tint="#4CAF50"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Premium Active"
                            android:textSize="16sp"
                            android:textColor="#4CAF50"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Upgrade Layout (shown when not premium) -->
                    <LinearLayout
                        android:id="@+id/upgradeLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Unlock all features:"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary_dark"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="- Full scan history\n- Compare products\n- Ad-free experience"
                            android:textSize="13sp"
                            android:textColor="@color/text_secondary_dark"
                            android:lineSpacingExtra="4dp"
                            android:layout_marginBottom="16dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnUpgrade"
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:text="Upgrade to Premium - $1.99"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            app:backgroundTint="#00D4E6"
                            app:cornerRadius="12dp" />

                        <TextView
                            android:id="@+id/tvRestorePurchases"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Restore Purchases"
                            android:textSize="14sp"
                            android:textColor="#00D4E6"
                            android:gravity="center"
                            android:paddingVertical="12dp"
                            android:clickable="true"
                            android:focusable="true" />

                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Developer Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/surface_card_dark"
                app:strokeColor="@color/border_dark"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Section Header -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Developer"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary_dark"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="16dp" />

                    <!-- Premium Debug Toggle -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="8dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Force Premium Mode"
                                android:textSize="15sp"
                                android:textColor="@color/text_primary_dark"
                                android:fontFamily="sans-serif" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Toggle premium features for testing"
                                android:textSize="13sp"
                                android:textColor="@color/text_secondary_dark"
                                android:fontFamily="sans-serif"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchPremiumDebug"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:trackTint="@color/switch_track_color"
                            app:thumbTint="#FFD700" />

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/border_dark"
                        android:layout_marginVertical="12dp" />

                    <!-- Debug Toggle -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="8dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Show Debug Information"
                                android:textSize="15sp"
                                android:textColor="@color/text_primary_dark"
                                android:fontFamily="sans-serif" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Display detailed analysis logs in results"
                                android:textSize="13sp"
                                android:textColor="@color/text_secondary_dark"
                                android:fontFamily="sans-serif"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchDebug"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:trackTint="@color/switch_track_color"
                            app:thumbTint="@color/primary_accent" />

                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- About Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/surface_card_dark"
                app:strokeColor="@color/border_dark"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Section Header -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="About"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary_dark"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Protein Quality Scanner"
                        android:textSize="15sp"
                        android:textColor="@color/text_primary_dark"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Version 1.0.0"
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary_dark"
                        android:fontFamily="sans-serif"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Analyze protein quality using PDCAAS scoring with advanced compound detection and gelatin inflation warnings."
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary_dark"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="2dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
