<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/surface_card_dark"
    app:strokeColor="@color/border_dark"
    app:strokeWidth="1dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Sync Icon -->
        <ImageView
            android:id="@+id/ivSyncIcon"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:padding="10dp"
            android:src="@drawable/ic_sync"
            app:tint="#FFB84D"
            android:background="@drawable/pdcaas_badge_background"
            android:layout_marginEnd="16dp" />

        <!-- Barcode Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvBarcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0123456789012"
                android:textSize="16sp"
                android:textColor="@color/text_primary_dark"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:fontFamily="monospace" />

            <TextView
                android:id="@+id/tvTimestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Queued 2 hours ago"
                android:textSize="13sp"
                android:textColor="@color/text_secondary_dark"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/tvErrorReason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Network error"
                android:textSize="12sp"
                android:textColor="#FF6B6B"
                android:layout_marginTop="2dp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Retry Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRetry"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Retry"
            android:textSize="12sp"
            style="@style/Widget.Material3.Button.TonalButton"
            app:backgroundTint="#2A2A2A"
            android:textColor="#00D4E6"
            app:cornerRadius="8dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
